{{ if eq .chezmoi.os "windows" -}}
hooks:
  read-source-state:
    pre:
      command : "pwsh"
      args : ["-NoProfile","-Command","echo","pre-read-source-state $ENV:CHEZMOI"]
    post:
      command : "pwsh"
      args : ["-NoProfile","-Command","echo","post-read-source-state $ENV:CHEZMOI"]
{{ end -}}

{{ if eq .chezmoi.os "windows" -}}
interpreters:
  py :
    command : 'uv.exe'
    args : ["run", "python"]
  ps1 : 
    command : "C:/Program Files/PowerShell/7/pwsh.exe"
    args : ["-NoLogo", "-NoProfile"]
{{ end -}}